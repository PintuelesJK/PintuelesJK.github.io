<!DOCTYPE html>
<html>

<head>
    <title>Encriptaci贸n y Desencriptaci贸n</title>
    <script>
        function encriptar() {
            var texto = document.getElementById("texto").value;
            var resultado = "";
            for (var i = 0; i < texto.length; i++) {
                resultado += String.fromCharCode(texto.charCodeAt(i) + 2);
            }
            document.getElementById("resultado").value = resultado;
        }

        function desencriptar() {
            var texto = document.getElementById("resultado").value;
            var resultado = "";
            for (var i = 0; i < texto.length; i++) {
                resultado += String.fromCharCode(texto.charCodeAt(i) - 2);
            }
            document.getElementById("texto").value = resultado;
        }
    </script>
</head>

<body>
    <h1>Encriptaci贸n y Desencriptaci贸n</h1>
    <label for="texto"><strong>Introduce el texto a encriptar/desencriptar:</strong></label>
    <br>
    <input type="text" id="texto\"><br><br>
    <input type="button" onclick="encriptar()" value="Encriptar">
    <input type="button" onclick="desencriptar()" value="Desencriptar">
    <br><br>
    <label for="resultado\"><strong>Resultado:</strong></label>
    <br>
    <input type="text" id="resultado">
</body>

</html>
